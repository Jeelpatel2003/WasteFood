@{
}


@model List<WasteFood.Models.Entities.Customer>
<h1> Customer </h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Password</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Customers in Model)
        {
            <tr>
                <td>@Customers.Id</td>
                <td>@Customers.Name</td>
                <td>@Customers.Email</td>
                <td>@Customers.Phone</td>
                <td>@Customers.Address</td>
                <td>@Customers.Password</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Customers" asp-action="Edit" asp-route-id="@Customers.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>